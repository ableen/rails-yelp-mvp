<h1>New Restaurant</h1>

<%= simple_form_for [@restaurant] do |f| %>
  <%= f.input :name, placeholder: "Sweet Baby Ray's" %>
  <%= f.input :address, placeholder: "123 Main Street" %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.input :phone_number, placeholder: "800- 555-1234" %>

  <%= f.submit "Add a new restaurant", class: "btn btn-primary" %>
<% end %>

<%= link_to "Return home", restaurants_path, class: "btn btn-success" %>
